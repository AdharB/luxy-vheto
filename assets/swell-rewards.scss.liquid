$min: min-width;
$max: max-width;
$small: 480px;
$s-medium: 768px;
$large: 992px;
$x-large: 1200px;

/*Text colors*/

$colorTextWhite: #000000;
$colorTextDarkGreen: #ffffff;
$colorTextGreen: #00953d;
$colorTextLightGreen: #a0d8b3;
$colorWhite: #fff;
$colorBlack: #000;
$colorAntiquewhite: #f3e1d0;
$swellTextColorLightGrey: #3d4246;
$colorWhitish: #fefefe;
$colorLightGrey: #f5f3ef;
$colorBGGrey: #ebebeb;

/*Text colors End*/

@font-face {
  font-family: 'ActaW01-Book';
  src: url('ActaW01-Book.woff2') format('woff2'),
      url('ActaW01-Book.woff') format('woff');
  font-weight: 500;
  font-style: normal;
}

@font-face {
  font-family: 'Futura Std';
  src: url('FuturaStd-Heavy.woff2') format('woff2'), url('FuturaStd-Heavy.woff') format('woff');
  font-weight: 900;
  font-style: normal;
}

$theme-font-family-acta: "ActaW01-Book";
$themeFontFutursStd: "Futura Std";

@font-face {
  font-family: 'swell-reward';
  src:  url('swell-reward.eot?uodntn');
  src:  url('swell-reward.eot?uodntn#iefix') format('embedded-opentype'),
    url('swell-reward.ttf?uodntn') format('truetype'),
    url('swell-reward.woff?uodntn') format('woff'),
    url('swell-reward.svg?uodntn#swell-reward') format('svg');
  font-weight: normal;
  font-style: normal;
  font-display: block;
}

