#rewards,
#refer,
#account {
  .wrapper {
    max-width: initial;
  }
}

.swell-desktop {
  display: none !important;
  @media($min: $s-medium) {
    display: block !important;
  }
}
.swell-mobile {
  display: block !important;
  @media($min: $s-medium) {
    display: none !important;
  }
}
.swell-referral-loader {
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  img {
    max-width: 75px;
  }
}

.luxy-hair {
  ul {
    padding: 0;
    margin: 0;
    li {
      list-style-type: none;
    }
  }
  img {
    width: 100%;
    height: 100%;
    -o-object-fit: cover;
    object-fit: cover;
    -o-object-position: center top;
    object-position: center top;
    vertical-align: -webkit-baseline-middle;
  }
  .swell-heading {
    font-family: $theme-font-family-acta;
    font-size: 26px;
    font-weight: normal;
    font-stretch: normal;
    font-style: normal;
    line-height: normal;
    letter-spacing: normal;
    text-align: center;
    color: #000000;
    @media($min: $small) {
      font-size: 40px;
    }
    @media($min: $s-medium) {
      font-size: 30px;
    }
    @media($min: $large) {
      font-size: 36px;
    }
  }
  .swell-text {
    font-family: $theme-font-family-acta;
    font-size: 17px;
    font-weight: normal;
    font-stretch: normal;
    font-style: normal;
    line-height: normal;
    letter-spacing: normal;
    text-align: left;
    color: $colorBlack;
    max-width: 540px;
  }

  .banner-section {
    min-height: 630px;
    margin-bottom: 65px;
    position: relative;
    background: url(swell-banner-mobile.png);
    background-repeat: no-repeat;
    background-position: center;
    background-size: cover;
    @media($min: $small) {
      margin-bottom: 100px;
      min-height: 950px;
    }
    @media($min: $s-medium) {
      background: url(swell-banner.png);
      background-repeat: no-repeat;
      background-position: center;
      background-size: cover;
      margin-bottom: 80px;
      min-height: 70vh;
    }
    @media($min: $large) {
      margin-bottom: 100px;
    }
    &.logged-in{
      min-height: 630px;
      margin-bottom: 45px;
      @media($min: $small) {
        min-height: 900px;
        margin-bottom: 65px;
      }
      @media($min: $s-medium) {
        min-height: 70vh;
        margin-bottom: 50px;
      }
      @media($min: $large) {
        margin-bottom: 65px;
      }
    }
    img {
      width: 50%;
      &.swell-mobile {
        display: block;
        width: 100%;
        @media($min: $s-medium) {
          display: none;
        }
      }
    }
    .swell-text {
      font-family: $theme-font-family-acta;
      font-size: 17px;
      font-weight: normal;
      font-stretch: normal;
      font-style: normal;
      line-height: normal;
      letter-spacing: normal;
      text-align: left;
      color: $colorBlack;
      max-width: 540px;
      margin-bottom: 40px;
    }
    .holder {
      display: flex;
      justify-content: center;
      align-items: flex-start;
      background-color: transparent;
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      @media($min: $s-medium) {
        height: 100%;
        padding-left: 5%;
        width: 66%;
        align-items: center;
      }
      @media($min: $large) {
        padding-left: 15px;
        width: 63%;
      }
      .text-section {
        display: flex;
        justify-content: center;
        flex-direction: column;
        text-align: center;
        align-items: center;
        padding-top: 50px;
        @media($min: $small) {
          padding-top: 80px;
        }
        @media($min: $s-medium) {
          align-items: flex-start;
          padding-top: 0;
          width: 100%;
          max-width: 630px;
        }
        &.logged-in{
          .swell-btn-holder {
            margin-bottom: 50px;
            @media($min: $small) {
              margin-bottom: 80px;
            }
            @media($min: $s-medium) {
              margin-bottom: 0px;
            }
          }  
        }
        h1 {
          font-family: $theme-font-family-acta;
          font-size: 47px;
          font-weight: normal;
          font-stretch: normal;
          font-style: normal;
          line-height: normal;
          letter-spacing: normal;
          text-align: center;
          color: $colorBlack;
          text-transform: capitalize;
          margin-bottom: 0;
          @media($min: $small) {
            font-size: 72px;
          }
          @media($min: $s-medium) {
            font-size: 65px;
          }
          @media($min: $large) {
            font-size: 85px;
          }
        }
        .swell-text {
          font-family: $theme-font-family-acta;
          font-size: 13px;
          font-weight: normal;
          font-stretch: normal;
          font-style: normal;
          line-height: normal;
          letter-spacing: normal;
          text-align: left;
          color: $colorBlack;
          max-width: 567px;
          margin-bottom: 20px;
          text-align: center;
          @media($min: $small) {
            font-size: 20px;
            margin-bottom: 40px;
          }
          @media($min: $s-medium) {
            font-size: 13px;
            text-align: left;
            max-width: 425px;
            margin-bottom: 40px;
          }
          @media($min: $large) {
            font-size: 17px;
            max-width: 555px;
          }
          &.join-reward-text{
            margin-bottom: 50px;
            @media($min: $small) {
              margin-bottom: 80px;
            }
            @media($min: $s-medium) {
              margin-bottom: 20px;
            }
          }
        }
        .swell-btn-holder {
          display: flex;
          align-items: center;
          justify-content: space-between;
          max-width: 280px;
          width: 100%;
          margin-bottom: 15px;
          @media($min: $small) {
            max-width: 400px;
            margin-bottom: 30px;
          }
          @media($min: $s-medium) {
            max-width: 300px;
            margin-bottom: 20px;
          }
          @media($min: $large) {
            max-width: 350px;
          }
          .swell-btn {
            font-family: $themeFontFutursStd;
            font-size: 12px;
            font-stretch: normal;
            font-style: normal;
            letter-spacing: normal;
            text-align: center;
            background-color: $colorBlack;
            color: $colorWhite;
            width: 100%;
            padding: 14px 0;
            text-transform: uppercase;
            border: 2px solid $colorBlack;
            max-width: 136px;
            @media($min: $small) {
              max-width: 195px;
              font-size: 14px;
            }
            @media($min: $s-medium) {
              max-width: 145px;
              padding: 10px 0;
            }
            @media($min: $large) {
              max-width: 170px;
              padding: 12px 0;
            }

            &:hover {
              background-color: transparent;
              color: $colorBlack;
            }
            &.sign-in {
              background-color: transparent;
              color: $colorBlack;
              &:hover {
                background-color: $colorBlack;
                color: $colorWhite;
              }
            }
            &.swell-btn-redeem {
              background-color: $colorBlack;
              color: $colorWhite;
              &:hover {
                color: $colorBlack;
                background-color: $colorWhite;
              }
            }
            &.swell-btn-history{
              color: $colorBlack;
              background-color: transparent;
              &:hover {
                color: $colorWhite;
                background-color: $colorBlack;
              }
            }
          }
        }
      }
    }
  }
  .swell-container {
    max-width: 1200px;
    width: 100%;
    margin: 0 auto;
    padding: 0 10px;
  }
  .how-it-works {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    text-align: center;
    margin-bottom: 65px;
    @media($min: $small) {
      margin-bottom: 100px;
    }
    @media($min: $s-medium) {
      margin-bottom: 80px;
    }
    @media($min: $large) {
      margin-bottom: 100px;
    }
    .steps {
      display: flex;
      justify-content: space-around;
      align-items: center;
      list-style: none;
      padding: 0;
      width: 100%;
      margin: 40px 0 0;
      flex-wrap: wrap;
      @media($min: $small) {
        margin: 50px 0 0;
      }
      @media($min: $s-medium) {
        flex-wrap: nowrap;
        max-width: 730px;
        margin: 45px 0 0;
      }
      @media($min: $large) {
        max-width: 900px;
        margin: 60px 0 0;
      }
      @media($min: $x-large) {
        max-width: 1100px;
        margin: 70px 0 0;
      }
      li {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        margin: 0;
        flex-basis: 100%;
        margin: 0 0 35px;
        @media($min: $small) {
          margin: 0 0 55px;
        }
        @media($min: $s-medium) {
          margin: 0;
          flex-basis: 33.33%;
        }
        &:last-child {
          margin: 0;
        }
        .number {
          font-family: $theme-font-family-acta;
          font-size: 20px;
          font-weight: normal;
          font-stretch: normal;
          font-style: normal;
          line-height: normal;
          letter-spacing: normal;
          text-align: center;
          color: #000000;
          width: 40px;
          height: 40px;
          border-radius: 50%;
          background-color: #f5f3ef;
          display: flex;
          align-items: center;
          justify-content: center;
          @media($min: 401px) {
            font-size: 24px;
            width: 50px;
            height: 50px;
          }
          @media($min: $small) {
            font-size: 32px;
            width: 60px;
            height: 60px;
          }
          @media($min: $s-medium) {
            font-size: 26px;
            width: 50px;
            height: 50px;
          }
          @media($min: $large) {
            font-size: 30px;
            width: 54px;
            height: 54px;
          }
        }
        h4 {
          font-family: $themeFontFutursStd;
          font-size: 16px;
          font-weight: 900;
          font-stretch: normal;
          font-style: normal;
          line-height: normal;
          letter-spacing: normal;
          text-align: center;
          color: #000000;
          text-transform: uppercase;
          margin: 40px 0 20px;
          @media($min: 401px) {
            font-size: 22px;
          }
          @media($min: $small) {
            font-size: 28px;
          }
          @media($min: $s-medium) {
            margin: 20px 0 10px;
            font-size: 20px;
          }
          @media($min: $large) {
            font-size: 22px;
          }
        }
        p {
          font-family: $theme-font-family-acta;
          font-weight: normal;
          font-stretch: normal;
          font-style: normal;
          line-height: normal;
          letter-spacing: normal;
          text-align: center;
          color: #000000;
          max-width: 355px;
          font-size: 14px;
          @media($min: 401px) {
            font-size: 17px;
          }
          @media($min: $small) {
            font-size: 20px;
          }
          @media($min: $s-medium) {
            font-size: 14px;
            max-width: initial;
          }
          @media($min: $large) {
            font-size: 16px;
          }
          .swell-break {
            display: none;
            @media($min: $s-medium) {
              display: block;
            }
          }
        }
        &:first-child {
          p {
            max-width: initial;
          }
        }
      }
    }
  }
  .swell-logged-in-section {
    width: 100%;
    padding: 0;
    margin-bottom: 65px;
    @media($min: $small) {
      margin-bottom: 100px;
    }
    @media($min: $s-medium) {
      margin-bottom: 60px;
    }
    @media($min: $large) {
      margin-bottom: 80px;
    }
    .swell-container{
      display: flex;
      align-items: center;
      justify-content: center;
      flex-direction: column;
    }
    .swell-text {
      font-family: $theme-font-family-acta;
      font-size: 30px;
      font-weight: normal;
      font-style: normal;
      font-stretch: normal;
      line-height: normal;
      letter-spacing: normal;
      text-align: center;
      color: $colorBlack;
      margin-bottom: 0;
      @media($min: $small) {
        font-size: 44px;
      }
      @media($min: $s-medium) {
        font-size: 40px;
      }
      @media($min: $large) {
        font-size: 44px;
      }
      .swell-first-name{
        text-transform: capitalize;
      }
    }
  }
  .ways-to-earn {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    margin-bottom: 65px;
    @media($min: $small) {
      margin-bottom: 100px;
    }
    @media($min: $s-medium) {
      margin-bottom: 80px;
    }
    @media($min: $large) {
      margin-bottom: 100px;
    }
    .campaigns {
      display: flex;
      text-align: center;
      list-style: none;
      flex-wrap: wrap;
      padding: 0;
      justify-content: space-between;
      margin: 30px 0 0;
      @media($min: $small) {
        margin: 60px 0 0;
      }
      &.logged-in{
        .swell-campaign{
          &.last-campaign{
            display: flex;
            justify-content: center;
            align-items: center;
            .swell-campaign-content{
              cursor: unset;
            }
            .swell-campaign-shop-now{
              display: inline-block;
            }
            .swell-campaign-sign-up{
              display: none;
            }
          }
          .swell-campaign-content{
            cursor: pointer;
          }
        }  
      }
      .swell-campaign {
        flex-basis: 50%;
        border-top: 1px solid #a1a1a1;
        border-left: 1px solid #a1a1a1;
        margin-bottom: 0;
        @media($min: $s-medium) {
          border-top: 0;
          border-bottom: 1px solid #a1a1a1;
          border-right: 1px solid #a1a1a1;
          border-left: 1px solid #a1a1a1;
          margin-bottom: 0;
          &:nth-child(3),
          &:nth-child(5),
          &:nth-child(7) {
            border-left: 0;
            @media($min: $s-medium) {
              border-left: 1px solid #a1a1a1;
            }
          }
          flex-basis: 25%;
          border-right: 0;
        }
        &:nth-child(1),
        &:nth-child(2),
        &:nth-child(3),
        &:nth-child(4) {
          border-top: 1px solid #a1a1a1;
          @media($min: $s-medium) {
            border-top: 1px solid #a1a1a1;
          }
        }
        &:nth-child(2),
        &:nth-child(6) {
          border-right: 1px solid #a1a1a1;
          @media($min: $s-medium) {
            border-right: 0;
          }
        }
        &:nth-child(7),
        &:nth-child(8) {
          border-bottom: 1px solid #a1a1a1;
        }
        &:nth-child(4),
        &:nth-child(8) {
          border-right: 1px solid #a1a1a1;
        }
        &:last-child {
          border-right: 1px solid #a1a1a1;
          @media($min: $s-medium) {
            border-right: 1px solid #a1a1a1;
          }
        }
        .swell-campaign-content {
          padding: 20px 0;
          @media($min: $small) {
            padding: 60px 0;
          }
          @media($min: $s-medium) {
            padding: 50px 0;
          }
          @media($min: $large) {
            padding: 70px 0;
          }
          .swell-campaign-icon {
            margin-bottom: 25px;
            min-height:46px;
            @media($min: $small) {
              min-height:54px;
            }
            @media($min: $s-medium) {
              min-height:48px;
            }
            @media($min: $large) {
              min-height:54px;
            }
            i {
              font-size: 42px;
              @media($min: $small) {
                font-size: 50px;
              }
              @media($min: $s-medium) {
                font-size: 44px;
              }
              @media($min: $large) {
                font-size: 50px;
              }
              &.swell-icon-logo {
                font-size: 50px;
                @media($min: $small) {
                  font-size: 75px;
                }
              }
            }
          }
          .swell-campaign-value {
            font-family: $theme-font-family-acta;
            font-size: 16px;
            font-weight: normal;
            font-stretch: normal;
            font-style: normal;
            letter-spacing: normal;
            text-align: center;
            color: $colorBlack;
            text-transform: uppercase;
            margin-bottom: 0px;
            @media($min: 401px) {
              margin-bottom: 5px;
              font-size: 20px;
            }
            @media($min: $small) {
              margin-bottom: 10px;
              font-size: 24px;
            }
            @media($min: $s-medium) {
              font-size: 20px;
              margin-bottom: 10px;
            }
            @media($min: $large) {
              font-size: 24px;
              margin-bottom: 12px;
            }
          }
          .swell-campaign-type {
            .swell-campaign-type-content {
              font-family: $theme-font-family-acta;
              font-size: 12px;
              font-weight: normal;
              font-stretch: normal;
              font-style: normal;
              letter-spacing: normal;
              text-align: center;
              color: $colorBlack;
              @media($min: 400px) {
                font-size: 16px;
              }
              @media($min: $small) {
                font-size: 20px;
              }
              @media($min: $s-medium) {
                font-size: 13px;
              }
              @media($min: $large) {
                font-size: 16px;
              }
            }
          }
        }

        &.news-letter-campaign {
          cursor: pointer;
        }

        &.last-campaign {
          font-family: $theme-font-family-acta;
          font-size: 22px;
          font-weight: normal;
          font-stretch: normal;
          font-style: normal;
          letter-spacing: normal;
          text-transform: uppercase;
          color: $colorBlack;
          display: flex;
          justify-content: center;
          align-items: center;
          .swell-campaign-shop-now,
          .swell-campaign-sign-up{
            font-family: $themeFontFutursStd;
            text-transform: uppercase;
            color: $colorBlack;
            font-weight: 900;
            cursor: pointer;
            line-height: 1;
            border-bottom: 1px solid $colorBlack;
          }
          .swell-campaign-shop-now{
            display: none;
          }
          
        }
      }
    }
  }
  .hidden {
    display: none;
  }
  .product-redemption-section {
    .redemption-main {
      padding: 60px 0 50px;
      @media(max-width: 768px) {
        padding: 110px 0 60px;
      }
      .swell-heading {
        font-family: $theme-font-family-acta;
        font-size: 31px;
        font-style: normal;
        font-stretch: normal;
        line-height: normal;
        letter-spacing: normal;
        text-align: center;
        color: #051c2c;
