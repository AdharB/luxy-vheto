      $('#base64_image').val(image);
      $('#canvas').show();
      $('#video').hide();
    }
    else
    {
      $('#btnSubmit').attr('disabled',true);
      $('.error_msg').hide();
      snap.innerHTML = "Take Photo";
      $('#base64_image').val('');
      $('#canvas').hide();
      $('#video').show();
    }
  });

  function showDiv() {
    $('.error_msg').hide();
    $('#videoDiv').show();
    snap.innerHTML = "Take Photo";
    $('#canvas').hide();
    $('#video').show();
    $('.first-step .instructions').hide();
    $('.upload-pic.live-camera').hide();
    $('.upload-pic.btn-light').hide();
    $('.upload-section').hide();
    $('#base64_image').val('');
    $("#hair_photo").val('');

    ga('send', 'event', 'vheto', 'Click', 'Live Camera'); //
  }

</script>
