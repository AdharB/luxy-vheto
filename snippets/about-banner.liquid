{% assign image_url = settings.about_banner_image | img_url: "1000x" %}

{% assign image_alt = settings.about_banner_image_alt %}

{% assign background_color = settings.about_banner_background_color %}

{% assign heading = settings.about_banner_title %}

{% assign subheading = settings.about_banner_subtitle %}

{% assign description = settings.about_banner_description %}

{% assign call_to_action = settings.about_banner_call_to_action %}

{% assign href = settings.about_banner_link %}

<div class="about-banner" style="background-color: {{ background_color }};">
  <div class="content-width-center">
    <div class="grid-bar-reverse">
      <div class="grid-item large--one-half">
        <div class="image-container">
          <img src="{{ image_url }}" alt="{{ image_alt }}" />
        </div>
      </div>
      <div class="grid-item large--one-half">
        <div class="about-banner-content">
          <h2 class="local--heading">
            {{ heading }}
          </h2>

          <h3 class="local--subheading">
            {{ subheading }}
          </h3>

          <p class="text-default-light">
            {{ description }}
          </p>

          <a href="{{ href }}" class="button-primary">
            {{ call_to_action }}
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
