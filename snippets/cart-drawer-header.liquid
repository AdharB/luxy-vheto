{% assign heading = settings.cart_mobile_title | default: "Your Cart" %}

{% assign description = settings.cart_description %}

<div class="cart-drawer-header" data-module-cart-drawer-header>
  <h1 class="local--heading">
    {{ heading }}

    <svg width="1em" height="1em" data-local-close-button>
      <use xlink:href="#icon-close-thin" />
    </svg>
  </h1>

  <p class="local--description">
    {{ description }}
  </p>
</div>
