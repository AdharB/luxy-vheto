<!-- Referral Section Code Start -->
  <div class="swell-container">
    <div class="referral-section-holder">
      <div class="swell-referral-holder">
        <div class="swell-referral">
          <div class="swell-referral-loader">
            <img src="{{ 'swell-loader.svg' | asset_url }}"/>
          </div>
        </div>
      </div>
      {% if customer %}
      <div class="referral-content logged-in">
        <div class="referral-content-holder">
          <a href="/pages/rewards" class="check-reward-balance">Check Rewards Balance</a>
          <div class="swell-referral-heading">
            <h2 class="swell-heading">Your Referrals</h2>
          </div>
          <div class="table-classes">
            <div class="swell-table-responsive">
              <table class="swell-referral-table">
                <thead>
                  <tr>
                    <th>Email</th>
                    <th>Status</th>
                  </tr>
                </thead>
                <tbody class="table-data">
                </tbody>
              </table>
              <div class="swell-referral-loader">
                <img src="{{ 'swell-loader.svg' | asset_url }}"/>
              </div>
            </div>
          </div>
          <div class="redeem-point">
            <div class="swell-referral-heading">
              <h2 class="swell-heading">How do I redeem my points?</h2>
              <p class="swell-detail">Now, the fun part! Simply apply your discount at checkout.</p>
            </div>
          </div>
        </div>
      </div>
      {% endif %}
    </div>
  </div>
<!-- Referral Section Code End -->
