<div class="product-accordion position--last" data-module-product-accordion>
  <div class="product-accordion-header state--showing" data-local-header>
    <span class="local--heading">
      Select Your Size
    </span>

    <svg class="local--icon" width="1em" height="1em">
      <use xlink:href="#icon-arrow-down" />
    </svg>
  </div>

  <div class="product-accordion-content" style="display: block;">
    <ul class="product-option-size-list" data-module-product-option-size>
      {% for variant in product.variants %}
        {%- assign value = variant.option1 -%}

        {%- assign url = variant.url | within: collection -%}

        {%- assign pjax_url = url | append: "&view=pjax" -%}

        {%- assign selected = false -%}

        {%- if variant == current_variant -%}
          {%- assign selected = true -%}
        {%- endif -%}

        <li class="product-option-size-item">
          <a href="{{ url }}" class="product-option-size-link {% if selected %}state--active{% endif %}" data-local-link data-pjax="{{ pjax_url }}" data-key="{{ value }}">
            {{ value }}
          </a>
        </li>
      {% endfor %}
    </ul>
  </div>
</div>
