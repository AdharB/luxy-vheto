    <form action="/search" role="search" class="mobile-menu-search-form" data-module-search>
      <input class="input-reset mobile-menu-search-input" type="search" name="q" value="{{ search.terms | escape }}" placeholder="Search" />

      <div class="mobile-menu-search-icon">
        <svg width="1em" height="1em">
          <use xlink:href="#icon-search" />
        </svg>
      </div>
    </form>
  </div>
</div>
