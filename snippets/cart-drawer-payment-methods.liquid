<div class="cart-drawer-payment-icons">
  <h3 class="cart-drawer-payment-icons-heading">
    Payment Methods
  </h3>

  <div class="flex-bar">
    {% assign payment_types = "american_express, master, visa, paypal, apple_pay, google_pay" | split: ", " %}

    {% for type in payment_types %}
      {% if shop.enabled_payment_types contains type %}
        <div class="flex-item">
          {% assign snippet = "svg-icon-payment-" | append: type %}
          {% include snippet %}
        </div>
      {% endif %}
    {% endfor %}
  </div>

  <div class="cart-drawer-payment-logos">
    <p class="local--heading">
      Buy now, pay later.
    </p>

    <div class="grid-bar">
      <div class="grid-item one-half">
        <img src="{{ 'logo-shoppay.png' | asset_url }}" alt="" />
      </div>

      <div class="grid-item one-half">
        <img src="{{ 'logo-paybright.png' | asset_url }}" class="local--image-2" alt="Paybright" />
      </div>
    </div>
  </div>
</div>
