{%- include "object-param-view" -%}

{% assign enabled = section.settings.enabled %}

{% if enabled %}
  {%- assign test_variant = param_view | default: "a" -%}

  <div class="homepage-thumbnails" data-module-homepage-thumbnails>
    <div data-flickity='{ "cellAlign": "left", "contain": true, "freeScroll": true, "pageDots": false, "prevNextButtons": false }'>
      {% for block in section.blocks %}
        {% assign image = block.settings.image %}

        {% include "attribute-image-box-ratio" %}

        {% assign image_url = image | img_url: "600x" %}

        {% assign image_alt = block.settings.image_alt %}

        {% assign heading = block.settings.heading %}

        {% assign description = block.settings.description %}

        {% assign call_to_action = block.settings.call_to_action %}

        {% assign url = block.settings.url %}

        <div class="homepage-thumbnails-slide">
          <a href="{{ url }}" class="homepage-thumbnails-slide-image" style="padding-bottom: {{ image_box_ratio }};">
            <img data-src="{{ image_url }}" alt="{{ image_alt }} - Luxy Hair" />
          </a>

          <div class="homepage-thumbnails-slide-content">
            <h1 class="local--heading">
              {{ heading }}
            </h1>

            <h2 class="local--description">
              {{ description }}
            </h2>

            <a href="{{ url }}" class="local--button">
              {{ call_to_action }}
            </a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% endif %}

{% schema %}
  {
    "name": "Thumbnails",
    "tag": "section",
    "settings": [
      {
        "type": "checkbox",
        "id": "enabled",
        "label": "Enable",
        "default": false
      }
    ],
    "blocks": [
      {
        "name": "Thumbnails",
        "type": "thumbnail",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Name"
          },
          {
            "type": "header",
            "content": "Content"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "image_alt",
            "label": "Image alt"
          },
          {
            "type": "text",
            "id": "heading",
            "label": "Heading"
          },
          {
            "type": "text",
            "id": "description",
            "label": "Description"
          },
          {
            "type": "text",
            "id": "call_to_action",
            "label": "Call to action",
            "default": "Shop Now"
          },
          {
            "type": "url",
            "id": "url",
            "label": "Link"
          }
        ]
      }
    ]
  }
{% endschema %}
