{% assign heading = section.settings.heading %}

{% assign subheading = section.settings.subheading %}

{% assign button_call_to_action = section.settings.call_to_action %}

{% assign button_url = section.settings.url %}

{% assign button_background_color = section.settings.button_background_color %}

{% assign button_border_color = section.settings.button_border_color %}

{% assign button_text_color = section.settings.button_text_color %}

<div class="box-secondary-light">
  <div class="homepage-girls">
    <div class="homepage-girls-header">
      <span class="local--heading">
        {{ heading }}
      </span>

      <h1 class="local--subheading">
        {{ subheading }}
      </h1>
    </div>

    <div class="homepage-girls-slider">
      <div class="homepage-girls-slide-container" data-flickity='{ "wrapAround": true, "prevNextButtons": true, "autoPlay": false, "pageDots": true, "groupCells": 2, "cellAlign": "left" }' data-flickity-large='{ "groupCells": 4 }'>
        {% for block in section.blocks %}
          {% assign image = block.settings.image | default: nil %}

          {% unless image %}
            {% continue %}
          {% endunless %}

          {% include "attribute-image-box-ratio" %}

          {% assign image_url = image | img_url: "600x" %}

          {% assign name = block.settings.title %}

          <div class="homepage-girls-slide">
            <div class="image-container box-ratio-inline" style="padding-bottom: {{ image_box_ratio }};">
              <img class="one-whole" data-src="{{ image_url }}" alt="" />
            </div>

            <h2 class="local--heading">
              {{ name }}
            </h2>
          </div>
        {% endfor %}
      </div>
    </div>

    <div class="homepage-girls-button-container">
      {% include "component-button" %}
    </div>
  </div>
</div>

