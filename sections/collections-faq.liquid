{% assign title = section.settings.heading %}

{% assign article_handles = "" | split: "" %}

{% for block in section.blocks %}
  {% assign article_handle = block.settings.article | split: "-<-@" %}
  {% assign article_handles = article_handles | concat: article_handle %}
{% endfor %}

{% unless article_handles == empty %}
  <div class="collections-faq">
    {% include "faq" %}
  </div>
{% endunless %}

{% schema %}
  {
    "name": "FAQ",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      }
    ],
    "blocks": [
      {
        "name": "Article",
        "type": "article",
        "settings": [
          {
            "type": "article",
            "id": "article",
            "label": "Article"
          }
        ]
      }
    ]
  }
{% endschema %}